#include <stdio.h>
#include <stdlib.h>

int main()
{
    int opcao;

    do
    {
        printf("\n1.Opcao 1:Hamburguer");
        printf("\n2.Opcao 2: Cachorro quente");
        printf("\n3.Opcao 3: Pizza");
        printf("\n4.Opcao 4: Sair");
        printf("\nDigite a opcao desejada:");
        scanf("%d", &opcao);

        if (opcao == 1)
        {
            printf("\nVoce escolheu a opcao 1: Hamburguer\n");
        }
        else if (opcao ==2)
        {
            printf("\nVoce escolheu a opcao 2: Cachorro quente\n");
        }
        else if (opcao == 3)
        {
            printf("\nVoce escolheu a opcao 3: Pizza\n");
        }
        else if (opcao == 4)
        {
            system("CLS");
            printf("\nSaindo......\n");
        }
        else
        {
            printf("\nOpcao invalida!!!Tente novamente!!");
        }

    } while(opcao != 4);

    return 0;
}
